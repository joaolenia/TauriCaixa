{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "caixadesktop",
  "version": "0.1.0",
  "identifier": "com.caixadesktop.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "caixadesktop",
        "width": 430,
        "height": 700,
        "resizable": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
